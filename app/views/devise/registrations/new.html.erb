<div class="max-w-lg mx-auto mt-10">
  <h2 class="text-3xl font-bold text-center text-gray-800">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "bg-white p-8 rounded-lg shadow-md mt-6" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
<div class="mb-4">
  <%= f.label :username, class: "block text-sm font-medium text-gray-700"  %>
  <%= f.text_field :username, required: true, class: "w-full mt-1 px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-purple-500 focus:border-purple-500" %>
</div>

    <div class="mb-4">
      <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full mt-1 px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-purple-500 focus:border-purple-500" %>
    </div>

    <div class="mb-4">
      <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
      <% if @minimum_password_length %>
        <em class="text-xs text-gray-500">(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "w-full mt-1 px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-purple-500 focus:border-purple-500" %>
    </div>

    <div class="mb-4">
      <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full mt-1 px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-purple-500 focus:border-purple-500" %>
    </div>

    <div class="mb-4">
      <%= f.submit "Sign up", class: "w-full bg-purple-600 text-white py-2 px-4 rounded-lg hover:bg-purple-500 focus:ring-4 focus:ring-purple-300 focus:outline-none" %>
    </div>
  <% end %>

  <div class="text-center mt-4">
    <%= render "devise/shared/links" %>
  </div>
</div>
