<div class="max-w-lg mx-auto mt-10">
  <h2 class="text-3xl font-bold text-center text-gray-800">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "bg-white p-8 rounded-lg shadow-md mt-6" }) do |f| %>
    <div class="mb-4">
      <%= f.label :admin, class: "block text-sm font-medium text-gray-700" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full mt-1 px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-purple-500 focus:border-purple-500" %>
    </div>

    <div class="mb-4">
      <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "w-full mt-1 px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-purple-500 focus:border-purple-500" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="mb-4 flex items-center">
        <%= f.check_box :remember_me, class: "h-4 w-4 text-purple-600 border-gray-300 rounded focus:ring-purple-500" %>
        <%= f.label :remember_me, class: "ml-2 text-sm text-gray-700" %>
      </div>
    <% end %>

    <div class="mb-4">
      <%= f.submit "Log in", class: "w-full bg-purple-600 text-white py-2 px-4 rounded-lg hover:bg-purple-500 focus:ring-4 focus:ring-purple-300 focus:outline-none" %>
    </div>
  <% end %>
</div>