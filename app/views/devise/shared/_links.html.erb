<%- if controller_name != 'sessions' %>
  <div class="mt-4 text-center">
    <%= link_to "Log in", new_user_session_path, class: "text-purple-600 hover:text-purple-500 font-medium" %>
  </div>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <div class="mt-4 text-center">
    <%= link_to "Sign up", new_registration_path(resource_name), class: "text-purple-600 hover:text-purple-500 font-medium" %>
  </div>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <div class="mt-4 text-center">
    <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-purple-600 hover:text-purple-500 font-medium" %>
  </div>
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <div class="mt-4 text-center">
    <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "text-purple-600 hover:text-purple-500 font-medium" %>
  </div>
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <div class="mt-4 text-center">
    <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: "text-purple-600 hover:text-purple-500 font-medium" %>
  </div>
<% end %>

<%- if devise_mapping.omniauthable? %>
  <div class="mt-4 text-center">
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= button_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class: "w-full bg-purple-600 text-white py-2 px-4 rounded-lg hover:bg-purple-500 focus:ring-4 focus:ring-purple-300 focus:outline-none" %>
    <% end %>
  </div>
<% end %>
